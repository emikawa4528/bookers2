<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <% if @user.errors.any? %>
          <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

<%= form_with model: @user do |f| %>
  <div class="form-group">
    <div class="field_with_errors">
            <label for="user_name">Name</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, class: "form-control name", id:"user_name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_image">Image</label>
          </div>
          <div class="field_with_errors">
            <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "form-container-file user_image", id: "user_profile_image" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_introduction">Introduction</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :introduction, autofocus: true, class: "form-control introduction", id: "user_introduction" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

